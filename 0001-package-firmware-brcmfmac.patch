From 0001-add-brcmf-firmware.patch
From: you <you@example.com>
Date: 2025-10-15 00:00:00 +0800
Subject: [PATCH] package: add firmware-brcmfmac package (brcmfmac43456)

---
 package/firmware/brcm/Makefile | 34 ++++++++++++++++++++++++++++++++++
 package/firmware/brcm/files/   |  0
 2 files changed, 34 insertions(+)
 create mode 100644 package/firmware/brcm/Makefile
 create mode 100644 package/firmware/brcm/files/.placeholder

--- /dev/null
+++ b/package/firmware/brcm/Makefile
@@ -0,0 +1,34 @@
+include $(TOPDIR)/rules.mk
+
+PKG_NAME:=firmware-brcmfmac
+PKG_VERSION:=1
+PKG_RELEASE:=1
+
+PKG_MAINTAINER:=orangepi patch by you
+PKG_LICENSE:=Proprietary
+
+include $(INCLUDE_DIR)/package.mk
+
+define Package/firmware-brcmfmac
+  SECTION:=firmware
+  CATEGORY:=Firmware
+  TITLE:=Broadcom brcmfmac firmware for AP6256 (bcm43456)
+  MAINTAINER:=orangepi patch by you
+endef
+
+define Package/firmware-brcmfmac/description
+  Firmware files for Broadcom brcmfmac43456 SDIO wireless modules (AP6256).
+  Installs firmware to /lib/firmware/brcm/.
+endef
+
+define Package/firmware-brcmfmac/install
+	$(INSTALL_DIR) $(1)/lib/firmware/brcm
+	# place binary and txt files into package/firmware/brcm/files/ before building
+	$(CP) ./files/* $(1)/lib/firmware/brcm/
+endef
+
+$(eval $(call BuildPackage,firmware-brcmfmac))
+
